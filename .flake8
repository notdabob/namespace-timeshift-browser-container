[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .tox,
    dist,
    build
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401   # imported but unused (for __init__.py files)

[pycodestyle]
max-line-length = 100
exclude = .git,__pycache__,.venv,venv,.tox,dist,build

[isort]
profile = black
line_length = 100
known_first_party = src
skip = .git,__pycache__,.venv,venv,.tox,dist,build